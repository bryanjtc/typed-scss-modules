{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node16",
    "declaration": true,
    "outDir": "./dist",
    "rootDirs": [".", "examples/output-folder/__generated__"]
  },
  "include": [
    "./typings/declarations.d.ts",
    "./lib/**/*.ts",
    "./examples/**/*.ts",
    "./__tests__/**/*.ts",
    "./jest.config.ts"
  ]
}
